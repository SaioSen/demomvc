@model demomvc.Models.Venta
@{
    ViewData["Title"] = "Venta";
}

<h1>@ViewData["Title"]</h1>


<div class="text-center">
    <h1 class="display-4">Formulario de Venta</h1>

    <form asp-controller="Venta" asp-action="Calcular">

        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" type="text" placeholder="Escriba el nombre"/>

        <label asp-for="Precio" class="control-label"></label>
        <input asp-for="Precio" class="form-control" type="text" placeholder="Escriba el precio" />

        <label asp-for="Cantidad" class="control-label"></label>
        <input asp-for="Cantidad" class="form-control" type="text" placeholder="Escriba la cantidad" />
        <br>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Calcular Total</button>
        </div>
    </form>
    <h1>@ViewData["Message"]</h1>

</div>
